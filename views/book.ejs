<% if(book != null ) { %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- book.name %></li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- book.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- book.name %>" loading="lazy">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12"><h1><%- book.name %></h1></div>
                <div class="col-12 mb-4"> <%- book.author %></div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4>Description</h4>
                    <%- book.description %>
                    <br>
                    <h4>Review</h4>
                    <%- book.review %>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <h3>Owner: <%- book.owner_name %></h3>

                    <h5>Owner's telegram: <%- book.owner_telegram %></h5>

                    <h5>Owner's email: <%- book.owner_email %></h5>

                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <h4>Borrow status: <%- book.borrows.borrow_status %> </h4>

                    <h4>Start date: <%- book.borrows.start_date %></h4>

                    <h4>Finish date:  <%- book.borrows.finish_date %></h4>

                    <h3>Borrower: <%- book.borrows.borrower.borrower_name %> </h3>
                    <h5>Borrower's telegram:  <%- book.borrows.borrower.borrower_telegram %></h5>

                    <h5>Borrower's email: <%- book.borrows.borrower.borrower_email %> </h5>

                </div>
            </div>

        </div>
    </div>
<% } else { %>
    <p>No item found.</p>
<% } %>