<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/img/airo.png" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Book Borrow" style="border-radius: 90px">
    </div>

    <div class="col-12 col-lg-6">
        <h1 class="display-5 fw-bold mb-3">Let's expand reading community ( •̀ ω •́ )✧ </h1>
        <p class="lead">
            Come with us traveller over universes of books and share your passed universes to other, while you exploring new universes of others' books
        </p>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="/explore-more-books" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">More books</a>
            <a href="/random-book" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Show Random</a>
        </div>

    </div>

</div>

<!--Latest-->
<section class="pb-4 pt-4">
    <div  class="d-flex mb-2 align-items-center">
        <h2>Latest Books</h2>
        <a href="/explore-latest" class="ms-auto">View more</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2g-lg-3">

        <% if(book != ''){%>
            <%book.latest.forEach(function(book, index){%>
                <a href="/book/<%= book._id %>" class="col text-center category-link">
                    <div class="category_img category_img--large shadow">
                        <img src="uploads/<%= book.image %>" alt="<%= book.name %>" loading="lazy">
                    </div>
                    <div class="pt-1"><%= book.name %></div>
                    <div class="pt-1"><%= book.borrows.borrow_status %></div>
                </a>
            <%})%>
        <%}%>

    </div>

</section>
<!--/Latest-->

